# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Development - SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Database (Production - PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/diary_db

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Email Settings (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# Monitoring (Sentry)
# =============================================================================
# Sentry DSN - https://sentry.io 에서 프로젝트 생성 후 발급
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# 환경 구분 (development / staging / production)
SENTRY_ENVIRONMENT=development

# 성능 모니터링 샘플링 비율 (0.0 ~ 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# 프로파일링 샘플링 비율 (0.0 ~ 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# 릴리즈 버전
SENTRY_RELEASE=ai-emotion-diary@1.0.0